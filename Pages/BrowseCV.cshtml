@page
@model asp_project.Pages.BrowseCVModel
@{
	ViewData["Title"] = "Browse CVs";
}

<table class="table">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Gender</th>
			<th>Grade</th>
			<th>Select Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var cv in Model.Db.CVModels)
		{
			<tr>
				<td>@cv.FirstName</td>
				<td>@cv.LastName</td>
				<td>@cv.Email</td>
				<td>@cv.Gender</td>
				<td>@cv.Grade</td>
				<td>
					<a asp-route-id="@cv.Id" asp-page="/SummaryCV">details</a>
					<a asp-route-id="@cv.Id" asp-page="/EditCV">edit</a>
					<a asp-route-id="@cv.Id" asp-page="/DeleteCV">delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
